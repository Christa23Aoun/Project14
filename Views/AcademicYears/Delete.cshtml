@model Project14.Models.AcademicYear

@{
    ViewData["Title"] = "Delete Academic Year";
}

<h1>Delete Academic Year</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>AcademicYear</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">StartDate</dt>
        <dd class="col-sm-10">@Model.StartDate.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">EndDate</dt>
        <dd class="col-sm-10">@Model.EndDate.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="AcademicYearID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
